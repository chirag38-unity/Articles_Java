<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography styles -->
    <style name="TextAppearance.ArticlesJava.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/roboto</item>
