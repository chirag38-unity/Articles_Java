<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ArticlesJava" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Typography -->
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.ArticlesJava.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.ArticlesJava.HeadlineMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.ArticlesJava.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.ArticlesJava.BodyMedium</item>

        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.ArticlesJava.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.ArticlesJava.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.ArticlesJava.LargeComponent</item>

    </style>

    <style name="Theme.ArticlesJava" parent="Base.Theme.ArticlesJava" />
</resources>